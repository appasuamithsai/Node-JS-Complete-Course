
<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>

<%- include('../includes/navigation.ejs') %>

<main>
    <% if(prods.length>0) {%>
        <div class="grid">
            <% for(let product of prods) { %>
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title"><%= product.name %></h1>
            </header>
            <div class="card__image">
                <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
            </div>
            <div class="card__content">
                <h2 class="product__price">$<%= product.price %></h2>
                <p class="product__description"><%= product.description %></p>
            </div>
            <div class="card__actions">
                <button class="btn"><a href="/admin/edit-product">Edit</a></button>
                <form action="/admin/delete-product" method="POST">
                    <button class="btn" type="submit"><a href="/admin/edit-product">Delete</a></button>
                </form>
            </div>
        </article>
        <% } %>
        </div> 
    <% } else { %>
        <h1>
            No Products
          </h1>
          <img
            src="https://images.heb.com/is/image/HEBGrocery/article-png/201912-Pet-button-01-367x435.jpg"
            alt="A Book"
          />
    <% } %>
</main>

<%- include('../includes/end.ejs') %>